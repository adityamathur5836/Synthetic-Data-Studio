# MedSynth Backend Environment Variables
# Copy this file to .env and fill in the values

# API Configuration
PORT=8000
DEBUG=False
SECRET_KEY=your-super-secret-key-for-jwt-and-encryption
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# File Storage
UPLOAD_DIR=uploads
GENERATED_DIR=generated

# Security
ALLOWED_ORIGINS=http://localhost:3000,https://medsynth.ai
PHI_SCRUBBING_LEVEL=MAX

# External Services (Optional)
CLOUD_STORAGE_PROVIDER=None # aws, google, azure
CLOUD_STORAGE_BUCKET=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
